{
  "name": "pipedrive-wfirma-integration",
  "version": "1.0.0",
  "description": "Integration between Pipedrive CRM and wFirma accounting system",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "dev:watch": "concurrently \"PORT=3000 nodemon src/index.js\" \"browser-sync start --config bs-config.js\"",
    "dev:simple": "PORT=3000 nodemon src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:supabase": "node tests/scripts/testSupabaseConnection.js",
    "test:stripe-payment": "node scripts/runStripePaymentTests.js",
    "migrate:proformas": "node scripts/migrateProformasToSupabase.js",
    "serve:vat": "npx http-server frontend/vat-margin -p 4173",
    "run:stripe-processor": "node scripts/runStripeProcessor.js",
    "emulate:webhook": "node scripts/emulate-webhook.js",
    "logs:render": "node scripts/fetch-render-logs.js",
    "logs:render:tail": "node scripts/fetch-render-logs.js --tail",
    "logs:render:500": "node scripts/fetch-render-logs.js --lines=500",
    "logs:render:1000": "node scripts/fetch-render-logs.js --lines=1000",
    "logs:render:save": "node scripts/fetch-render-logs.js --output=logs/render-$(date +%Y%m%d-%H%M%S).txt"
  },
  "keywords": [
    "pipedrive",
    "wfirma",
    "integration",
    "crm",
    "accounting"
  ],
  "author": "Yury Sihai",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.46.0",
    "axios": "^1.6.0",
    "canvas": "^3.2.1",
    "cors": "^2.8.5",
    "csv-parse": "^6.1.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "express-session": "^1.18.2",
    "googleapis": "^167.0.0",
    "heic-convert": "^2.1.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.15.3",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.3",
    "papaparse": "^5.5.3",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "pdf-poppler": "^0.2.3",
    "pdfjs-dist": "^5.4.530",
    "pg": "^8.13.0",
    "sharp": "^0.34.5",
    "stripe": "^14.25.0",
    "tunnel-ssh": "^5.2.0",
    "winston": "^3.11.0",
    "xlsx": "^0.18.5",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "browser-sync": "^2.29.3",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "render-cli": "^0.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
