# Pipedrive API Configuration
PIPEDRIVE_API_TOKEN=your_pipedrive_api_token
PIPEDRIVE_BASE_URL=https://api.pipedrive.com/v1
PIPEDRIVE_WFIRMA_INVOICE_ID_FIELD_KEY=

# WordPress Database Configuration (для получения данных номеров с VPS)
# Быстрый способ: через SSH (рекомендуется)
WP_SSH_HOST=your_vps_ip
WP_SSH_USER=your_ssh_user
WP_SSH_PORT=22
WP_DB_USER=your_db_user
WP_DB_PASSWORD=your_db_password
WP_DB_NAME=your_db_name
WP_TABLE_PREFIX=wp_

# Альтернатива: прямое подключение к MySQL (медленнее)
# WP_DB_HOST=your_vps_host_or_ip
# WP_DB_PORT=3306

# wFirma API Configuration (API Key)
WFIRMA_APP_KEY=your_wfirma_app_key
WFIRMA_ACCESS_KEY=your_wfirma_access_key
WFIRMA_SECRET_KEY=your_wfirma_secret_key
WFIRMA_COMPANY_ID=your_wfirma_company_id
WFIRMA_BASE_URL=https://api2.wfirma.pl

# Server Configuration
PORT=3000
NODE_ENV=development

# Stripe API Configuration (live mode only)
STRIPE_API_KEY=sk_live_your_stripe_live_key
# Stripe Events API Key (for event reports - separate Stripe account/cabinet)
# IMPORTANT: Must be a SECRET key (sk_live_... or sk_test_...), NOT a publishable key (pk_...)
# If not set, will use STRIPE_API_KEY
STRIPE_EVENTS_API_KEY=sk_live_your_stripe_events_key
STRIPE_EVENTS_CACHE_TTL_MS=600000
# Stripe Webhook Secret (from Stripe Dashboard → Developers → Webhooks → Signing secret)
# Starts with whsec_... - required for webhook signature verification
STRIPE_WEBHOOK_SECRET=whsec_...
# Optional overrides
# STRIPE_API_VERSION=2024-04-10
# STRIPE_TIMEOUT_MS=12000
# STRIPE_MAX_NETWORK_RETRIES=2
# STRIPE_ALLOWED_DOMAIN=example.com

# Google OAuth 2.0 Configuration
# Получить Client ID и Secret в Google Cloud Console:
# https://console.cloud.google.com/apis/credentials
# Authorized JavaScript origins: https://invoices.comoon.io
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
# В production должен быть полный URL, в development можно оставить относительный
# GOOGLE_CALLBACK_URL=https://invoices.comoon.io/auth/google/callback
GOOGLE_CALLBACK_URL=/auth/google/callback

# Google Calendar API Configuration (for meeting reminders)
# Refresh Token для доступа к Google Calendar API
# Получить через OAuth 2.0 flow (см. docs/google-oauth-setup.md)
GOOGLE_REFRESH_TOKEN=your_google_refresh_token
# ID календаря для сканирования событий (например: primary или email календаря, например: hello@comoon.io)
GOOGLE_CALENDAR_ID=your_google_calendar_id
# Часовой пояс календаря (например: Europe/Warsaw, Europe/Kiev)
GOOGLE_TIMEZONE=Europe/Warsaw

# SendPulse API Configuration
# Получить ID и Secret в SendPulse MCP:
# https://mcp.sendpulse.com/mcp
SENDPULSE_ID=your_sendpulse_id
SENDPULSE_SECRET=your_sendpulse_secret

# Session Secret (используйте случайную строку в production)
SESSION_SECRET=your-random-session-secret-change-in-production

# VAT Margin Prototype (Auth)
VAT_MARGIN_ALLOW_DOMAIN=example.com
VAT_MARGIN_DEBUG_BYPASS_TOKEN=your_debug_token

# Bank Account IDs (to be configured later)
PLN_ACCOUNT_ID=
EUR_ACCOUNT_ID=

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# OpenAI API Configuration (optional, for AI-powered expense categorization)
# Get API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key
# Model to use (gpt-4o-mini is cheaper, gpt-4o is more accurate)
OPENAI_MODEL=gpt-4o-mini

